{
  "extends": [
    "standard",
    "airbnb-base"
  ],
  "env": {
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [ "./src", "./tests" ]
      }
    }
  },
  "plugins": [
    "import",
    "promise"
  ],
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "arrow-parens": "off"
  }
}
